@{
    ViewData["Title"] = "Admin Panel";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .dashboard-item {
        text-align: center;
        padding: 80px;
        border-radius: 15px;
        background: #f8f9fa;
        margin: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        height: 200px; /* Yükseklik ayarlaması */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        /* Burada margin ve transform kullanarak kaydırma yapıyoruz */
        transform: translate(-100px, -100px); /* Sol ve yukarı kaydırma */
    }
    .dashboard-item i {
        font-size: 4rem; /* İkon büyüklüğü */
        color: #007bff;
    }
    .dashboard-item h3 {
        margin: 15px 0;
        font-size: 2rem; /* Başlık büyüklüğü */
    }
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Tam ekran yüksekliği */
    }
    .row {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        /* Burada margin-top ile yukarı kaydırma */
        margin-top: -20px; /* Yukarı kaydırma */
    }
</style>



    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 col-lg-3">
                <div class="dashboard-item">
                    <i class="fas fa-users"></i>
                    <h3 id="userCount">0</h3>
                    <p>Kullanıcı Sayısı</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="dashboard-item">
                    <i class="fas fa-calendar-check"></i>
                    <h3 id="reservationCount">0</h3>
                    <p>Rezervasyon Sayısı</p>
                </div>
            </div>
        </div>
    </div>



<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        // Örnek olarak kullanıcı ve rezervasyon sayısını güncellemek için bir API çağrısı yapabilirsiniz
        // Burada örnek veriler kullanılmıştır
        document.addEventListener("DOMContentLoaded", function() {
            fetch('/Admin/GetUserCount')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('userCount').textContent = data.count;
                })
                .catch(error => console.error('Error fetching user count:', error));

            fetch('/Admin/GetReservationCount')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('reservationCount').textContent = data.count;
                })
                .catch(error => console.error('Error fetching reservation count:', error));
        });
    </script>