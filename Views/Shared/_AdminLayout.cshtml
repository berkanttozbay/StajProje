<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Admin Panel - Dashboard</title>

    <!-- Custom fonts for this template-->
    <link href="~/AdminUI/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/AdminUI/css/sb-admin-2.min.css" rel="stylesheet">

    <!-- Custom styles for buttons layout -->
    <style>
        .page-buttons {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }
    </style>
    <style>
        .top-buttons {
            display: flex;
            justify-content: flex-start;
            gap: 100px;
            padding: 80px;
        }

        .top-buttons .btn {
            width: 400px; /* Sabit genişlik */
            height: 120px; /* Sabit yükseklik */
            font-size: 1.1rem;
            text-align: center;
            line-height: 50px; /* Yükseklik ile aynı olmalı, metni ortalamak için */
            padding: 0; /* Varsayılan padding'i kaldır */
            margin: 20px 0;
            
        }
    </style>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">
        
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("Index", "Admin")">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-laugh-wink"></i>
                </div>
                <div class="sidebar-brand-text mx-3" >Admin Panel</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Profile -->
            <li class="nav-item active">
                <a class="nav-link" href="@Url.Action("Index", "Admin")">
                    <i class="fas fa-fw fa-user"></i>
                    <span>Profil</span>
                </a>
            </li>

            <!-- Nav Item - Rooms -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Odalar", "Admin")">
                    <i class="fas fa-fw fa-bed"></i>
                    <span>Odalar</span>
                </a>
            </li>

            <!-- Nav Item - Users -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Kullanicilar", "Admin")">
                    <i class="fas fa-fw fa-users"></i>
                    <span>Kullanıcılar</span>
                </a>
            </li>

            <!-- Nav Item - Reservations -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Rezervasyonlar", "Admin")">
                    <i class="fas fa-fw fa-calendar-alt"></i>
                    <span>Rezervasyonlar</span>
                </a>
            </li>

        </ul>
        <!-- End of Sidebar -->
         <div class="container-fluid">
            @RenderBody()
        </div>   
        <!-- Content Wrapper -->
        
        <!-- End of Content Wrapper -->

    </div>


    
    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="js/demo/chart-area-demo.js"></script>
    <script src="js/demo/chart-pie-demo.js"></script>
    
</body>

</html>
